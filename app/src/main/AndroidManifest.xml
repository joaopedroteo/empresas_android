<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.empresas_android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_logo_web"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_logo_web"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.BaseActivity"/>
        <activity
            android:name=".ui.EnterpriseDetailActivity"
            android:theme="@style/mainTheme" />
        <activity
            android:name=".ui.listingEnterprises.EnterprisesActivity"
            android:theme="@style/mainTheme" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/LoginTheme">
        </activity>
        <activity android:name=".ui.SplashScreenActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>