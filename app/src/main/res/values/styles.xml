<resources>

    <!-- BaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/myActionBar</item>
    </style>


    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/myActionBar</item>
        <item name="android:statusBarColor">@color/black23</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="mainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black23</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="btnLogin">
        <item name="android:background">@color/greeny_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="myActionBar" parent = "@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/medium_pink</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="screen_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="description_text">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edt_txt">
        <item name="android:ems">10</item>
    </style>

    <style name="txt_invalid_input">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>