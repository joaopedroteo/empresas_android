<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".EnterpriseDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_e_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="24dp"/>

            <TextView
                android:id="@+id/txtDetailEnterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imgEnterprise"
                app:layout_constraintEnd_toEndOf="@+id/imgEnterprise"
                app:layout_constraintStart_toStartOf="@+id/imgEnterprise"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="aiud paisudbfpai sufaisdbf as bfaiusbdf iasubdfiasudbfai sudbf çaisudbf aisudbf aisudbfai lsdbfa sfba lsdbfi asudbf asdbfaçisu asn abasj basjba sb asjdbasdba sasba sd basdb asdb "
                app:layout_constraintVertical_bias="0"
                android:layout_margin="16dp"/>
        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>