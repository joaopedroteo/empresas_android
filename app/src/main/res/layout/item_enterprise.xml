<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/itemEnterprisePhotoImageView"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:contentDescription="@string/enterprise_image_description"
        tools:srcCompat="@drawable/img_e_1_lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        style="@style/itemEnterpriseTitleTextView"
        android:id="@+id/titleEnterprise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemEnterprisePhotoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/darkBlueTitle"
        android:layout_margin="16dp"
        tools:text="Titulo"
        android:gravity="start"/>

    <TextView
        style="@style/description_text"
        android:gravity="start"
        android:id="@+id/itemEnterpriseCityTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/warm_grey"
        app:layout_constraintTop_toBottomOf="@id/titleEnterprise"
        app:layout_constraintStart_toEndOf="@id/itemEnterprisePhotoImageView"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        tools:text="Subtitulo"/>

    <TextView
        style="@style/description_text"
        android:id="@+id/itemEnterpriseCountryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warm_grey"
        tools:text="Brasil"
        app:layout_constraintTop_toBottomOf="@+id/itemEnterpriseCityTextView"
        app:layout_constraintStart_toStartOf="@+id/itemEnterpriseCityTextView"
        app:layout_constraintEnd_toEndOf="@+id/itemEnterpriseCityTextView"
        app:layout_constraintHorizontal_bias="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>